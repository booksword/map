<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dong.lan.mapeye.views.TimerHandlerActivity">


    <include layout="@layout/action_bar" />

    <dong.lan.library.LabelTextView
        android:id="@+id/timer_start_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:paddingBottom="4dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="4dp"
        android:textSize="18sp"
        app:bg_color="@color/colorPrimary"
        app:radius="20dp"
        app:strokeWidth="1dp" />

    <dong.lan.mapeye.views.customsView.ToggleCheckBox
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/arrow_right_grey_48"
        android:checked="true" />

    <dong.lan.library.LabelTextView
        android:id="@+id/timer_end_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:paddingBottom="4dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="4dp"
        android:textSize="18sp"
        app:bg_color="@color/colorPrimary"
        app:radius="20dp"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/timer_other_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:textSize="16sp" />
</LinearLayout>
