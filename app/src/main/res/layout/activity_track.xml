<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:background="@color/md_white_1000"
        android:id="@+id/text"
        android:minHeight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <dong.lan.mapeye.views.customsView.CircleTextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/track_stop"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textColorHint="@color/md_red_400"
        android:text="停止"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <dong.lan.mapeye.views.customsView.CircleTextView
        android:layout_toLeftOf="@id/track_stop"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/track_start"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textColorHint="@color/colorAccent"
        android:text="开始"
        android:layout_width="50dp"
        android:layout_height="50dp" />


    <dong.lan.mapeye.views.customsView.CircleTextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/track_stop"
        android:id="@+id/track_save"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textColorHint="@color/md_orange_500"
        android:text="保存"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <dong.lan.library.LabelTextView
        app:bg_color="@color/colorPrimary"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_margin="12dp"
        app:shadowRadius="10dp"
        android:text="发送到方"
        app:clickAnimation="false"
        app:radius="20dp"
        android:textSize="@dimen/text_size_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>