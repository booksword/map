<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/itemContactHead"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="12dp"
        android:src="@drawable/boy" />


    <TextView
        android:id="@+id/itemContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/itemContactHead"
        android:textColor="@color/md_grey_800"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/itemContactMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemContactName"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/itemContactHead"
        android:lines="1"
        android:textColor="@color/md_grey_600"
        android:textSize="18sp" />

    <dong.lan.mapeye.views.customsView.LabelTextView
        android:id="@+id/itemContactCount"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:gravity="center"
        android:textColor="@color/md_white_1000"
        android:textSize="12sp"
        android:visibility="gone"
        app:bg_color="@color/md_red_500"
        app:radius="10dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/itemContactCount"
        android:gravity="end"
        android:padding="10dp"
        android:textSize="14sp" />

</RelativeLayout>