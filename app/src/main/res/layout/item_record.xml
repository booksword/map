<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    app:contentPadding="12dp"
    app:layout_insetEdge="bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <dong.lan.mapeye.views.customsView.LabelTextView
            android:id="@+id/record_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="围栏"
            android:textColor="#fff"
            app:radius="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:bg_color="@color/colorAccent"
            android:textSize="12sp" />

        <dong.lan.mapeye.views.customsView.LabelTextView
            android:id="@+id/record_info"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/record_type"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/md_grey_800"
            android:textSize="18sp"
            app:bg_color="@android:color/transparent"
            />

        <TextView
            android:id="@+id/record_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_type"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:textSize="16sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>