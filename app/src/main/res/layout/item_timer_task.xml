<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <dong.lan.mapeye.views.customsView.LabelTextView
        android:id="@+id/timer_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:text="单次"
        android:textColor="@color/md_white_1000"
        android:textSize="16sp"
        app:bg_color="@color/colorPrimary"
        app:radius="24dp" />

    <dong.lan.mapeye.views.customsView.LabelTextView
        android:id="@+id/timer_record_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_repeat"
        android:layout_toRightOf="@id/timer_repeat"
        android:paddingBottom="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp"
        android:text="反倒是 方式打开会费刷卡和佛恩f水电费费刷卡和"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:bg_color="@color/colorPrimary"
        app:radius="8dp"
        app:strokeWidth="1dp" />



    <TextView
        android:id="@+id/timer_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_record_info"
        android:layout_marginTop="12dp"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/timer_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_start_time"
        android:layout_marginTop="12dp"
        android:textSize="18sp" />

    <dong.lan.mapeye.views.customsView.ToggleButton
        android:id="@+id/timer_switcher"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/timer_end_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

</RelativeLayout>